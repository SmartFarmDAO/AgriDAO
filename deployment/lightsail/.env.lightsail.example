# AgriDAO Environment Configuration for Lightsail
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================
DB_PASSWORD=your_secure_database_password_here
POSTGRES_DB=agridao
POSTGRES_USER=postgres

# ============================================
# Backend Configuration
# ============================================
SECRET_KEY=your_secret_key_at_least_32_characters_long_change_this
JWT_SECRET=your_jwt_secret_key_change_this_too
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=development
DEBUG=True

# ============================================
# Blockchain Configuration
# ============================================
BLOCKCHAIN_RPC_URL=http://blockchain:8545
BLOCKCHAIN_NETWORK=development
PRIVATE_KEY=your_blockchain_private_key_without_0x_prefix

# Contract Addresses (update after deployment)
DAO_TOKEN_ADDRESS=
GOVERNANCE_ADDRESS=
MARKETPLACE_ADDRESS=
SUPPLY_CHAIN_ADDRESS=

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=noreply@agridao.com

# ============================================
# Frontend Configuration
# ============================================
# Replace <YOUR_LIGHTSAIL_IP> with your actual IP
VITE_API_URL=http://<YOUR_LIGHTSAIL_IP>:8000
VITE_BLOCKCHAIN_RPC=http://<YOUR_LIGHTSAIL_IP>:8545
VITE_ENVIRONMENT=development

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ============================================
# AWS Configuration (Optional)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# ============================================
# File Upload Configuration
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# ============================================
# API Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/agridao.log

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://<YOUR_LIGHTSAIL_IP>

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your_session_secret_key_change_this
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# ============================================
# Monitoring (Optional)
# ============================================
SENTRY_DSN=
ENABLE_METRICS=False
