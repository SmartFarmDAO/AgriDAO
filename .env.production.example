# Production Environment Configuration

# Environment
ENVIRONMENT=production

# Frontend Configuration
VITE_API_BASE=https://your-domain.com
VITE_PLATFORM_FEE_RATE=0.10

# Backend Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/agridb_prod
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# Email Providers (configure at least one)

# Gmail SMTP (recommended for small scale)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=AgriDAO

# SendGrid (recommended for production)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=AgriDAO

# Mailgun (alternative)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_FROM_NAME=AgriDAO

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# WalletConnect Configuration
VITE_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback
